<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_movie_list">

    <fragment
        android:id="@+id/navigation_movie_list"
        android:name="ru.sweetmilk.movieapp.cases.movieList.MovieListFragment"
        android:label="@string/movie_list_label"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_movie_list_to_details"
            app:destination="@id/navigation_movie_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_movie_details"
        android:name="ru.sweetmilk.movieapp.cases.movieDetails.MovieDetailsFragment"
        android:label="@string/movie_details_label"
        tools:layout="@layout/fragment_movie_details">
    </fragment>

    <fragment
        android:id="@+id/navigation_log_in_choose"
        android:name="ru.sweetmilk.movieapp.cases.logInChoose.LogInChooseFragment"
        android:label="@string/log_in_choose_label"
        tools:layout="@layout/fragment_log_in_choose">

        <action
            android:id="@+id/action_choose_to_log_in"
            app:destination="@id/navigation_log_in" />
    </fragment>

    <fragment
        android:id="@+id/navigation_log_in"
        android:name="ru.sweetmilk.movieapp.cases.logIn.LogInFragment"
        android:label="@string/log_in_label"
        tools:layout="@layout/fragment_log_in">
    </fragment>
</navigation>